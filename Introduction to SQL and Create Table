CREATE TABLE friends (
  id INETEGER,
  name TEXT,
  birthday DATE
);

INSERT INTO friends (id, name, birthday)
VALUES (1, 'Jane Doe', '1990-05-30');

INSERT INTO friends (id, name, birthday)
VALUES (2, 'Rishabh', '1998-06-25');

INSERT INTO friends (id, name, birthday)
VALUES (3, 'Horse', '1997-01-15');


UPDATE friends
SET name = 'Jane Smith'
WHERE id = 1;

ALTER TABLE friends
ADD COLUMN email TEXT;

UPDATE friends
SET email = 'jane@codecademy.com'
WHERE id = 1;

UPDATE friends
SET email = 'rishabbp@gmail.com'
WHERE id = 2;

UPDATE friends
SET email = 'horsegr@gmail.com'
WHERE id = 3;

DELETE FROM friends
WHERE id = 1;

select * from friends;
